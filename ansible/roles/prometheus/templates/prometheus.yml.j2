global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: "node"
    static_configs:
      - targets:
          - "{{ hostvars['monitoring-1'].ansible_host }}:9100"
          - "{{ hostvars['app-1'].ansible_host }}:9100"
          
  - job_name: "flask_app"
    metrics_path: /metrics
    static_configs:
      - targets:
          - "{{ hostvars['app-1'].ansible_host }}:80"

